<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.servicio.RegistrarServicio">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="25sp"
            android:paddingBottom="25sp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:paddingBottom="5sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_txt_vehiserv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vehiculo" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350sp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_text_empleserv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="empleado" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Lavado" />

                <Spinner
                    android:id="@+id/rg_sp_tipo_lavado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="350sp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reg_txt_precioserv"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="Precio" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="111dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_fechacalensrv"
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:hint="Fecha" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_calen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Calendario"
                        android:text="Calendario"
                        app:icon="@android:drawable/ic_menu_my_calendar"
                        app:iconGravity="textStart"
                        app:iconSize="40dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reg_txt_horaserv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hora" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_text_descripserv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripcion " />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/reg_btn_registrarserv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/btnRegistrar"
                    android:onClick="guardarUsuario"
                    android:text="Registrar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/reg_btn_borrarserv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/btnBorrar"
                        android:onClick="limpiarFormulario"
                        android:paddingRight="30dp"
                        android:text="Borrar" />

                    <Button
                        android:id="@+id/reg_btn_cancelarserv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#9EA8B1"
                        android:onClick="cancelarRegistro"
                        android:paddingLeft="30dp"
                        android:text="Cancelar" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>